<%= form_with(model: intervention, local: true) do |form| %>
  <% if intervention.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(intervention.errors.count, "error") %> prohibited this intervention from being saved:</h2>

      <ul>
      <% intervention.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- INTERVENTIONS -->
  <style>
    section#interventions>.container>form>section{
      margin-bottom:42px;
      padding: 0 6px;
    }
    #step-1,
    #step-2,
    #step-3,
    #step-4,
    #step-5,
    #step-6
    {
     display:none; 
     opacity:0;
     transform:all .2s ease-in-out;
    }
    .must-show{
      display:block !important;
      opacity:1;
    }
  </style>

  <section id="interventions">
    <div class="container">
       <header class="mb-60">
        <h2 class="text-center">Interventions Form</h2>
        <p class="lead font-lato"></p>
        <hr/>
       </header>       

        <form>
          <h3>Identification</h3>

          <div class='row'>
            <section id='step-0'>
              <h4>Employee Selection</h4>
              <p>Select your credentials</p>

              <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
              <script>
                jQuery(function($) {
                  $("#select-employee").on("change",function() {
                      var selectVal = $(this).val(); 
                  });
                });

              </script>
              <select id='select-employee' class="form-select" aria-label="select example" autocomplete="off">

                  <option selected value='-1'>
                    None
                  </option>

              <% if !@employees.nil? %>
                <% @employees.each do |employee| %>

                  <option value="<%= employee.id %>">
                    <%= employee.first_name %> <%= employee.last_name %>
                  </option>

                <% end %>
              <% end %>

              </select>
            </section>
          </div>

         <section id="step-1">
            <h3>Elevator Selector</h3>

            <div class='row'>
              <h4>Step 1/5</h4>
              <p>Select Customer</p>
              <select class="form-select" aria-label="select example" autocomplete="off">
                <option selected>None</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            </div>
         </section>

          <section id='step-2'>
            <div class='row'>
              <h4>Step 2/5</h4>
              <p>Select Building</p>
              <select class="form-select" aria-label="select example" autocomplete="off">
                <option selected>None</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            </div>
          </section>

          <section id='step-3'>
            <div class='row'>
              <h4>Step 3/5</h4>
              <p>Select Battery</p>
              <select class="form-select" aria-label="select example" autocomplete="off">
                <option selected>None</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            </div>
          </section>

          <section id='step-4'>
            <div class='row'>
              <h4>Step 4/5</h4>
              <p>Select Column</p>
              <select class="form-select" aria-label="select example" autocomplete="off">
                <option selected>None</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            </div>
          </section>
            
          <section id="step-5">
            <div class='row'>
              <h4>Step 5/5</h4>
              <p>Select Elevator</p>
              <select class="form-select" aria-label="select example" autocomplete="off">
                <option selected>None</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            </div>
          </section>

          <section id="step-6">
            <div class='row'>
              <hr/>
              <h3>Description</h3>
              <h4>Intervention Description</h4>
              <p>Please describe the nature of the intervention</p>
              <!--
              <label for="intervention-description" class="form-label">Intervention description.</label>
              -->
              <textarea class="form-control" id="intervention-description" rows="3" autocomplete="off"></textarea>
            </div>
          </section>

        </form>
    </div>
  </section>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
